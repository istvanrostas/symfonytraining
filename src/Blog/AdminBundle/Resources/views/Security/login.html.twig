{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Admin login{% endblock %}

{% block section %}

    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('blog_admin_security_logincheck') }}" method="post">
        <label for="name">Username:</label>
        <input type="text" name="_name" id="name" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" name="_password" id="password" value="{{ last_username }}" />

        <button type="submit">login</button>
    </form>

{% endblock %}